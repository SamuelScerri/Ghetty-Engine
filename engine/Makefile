# Makefile for python interface for package ghetty.
# File is generated by gopy. Do not edit.
# gopy.exe build -output=engine -vm=python3 .

GOCMD=go
GOBUILD=$(GOCMD) build -mod=mod
GOIMPORTS=goimports
PYTHON=C:\Python\Python312\python3.exe
LIBEXT=.pyd

# get the CC and flags used to build python:
GCC = $(shell $(GOCMD) env CC)
CFLAGS = -IC:/Python/Python312/Include
LDFLAGS = -LC:/Python/Python312/libs -lpython312  

all: gen build

gen:
	gopy.exe build -no-make -vm=python3 .

build:
	# build target builds the generated files -- this is what gopy build does..
	# this will otherwise be built during go build and may be out of date
	- rm ghetty.c
	# goimports is needed to ensure that the imports list is valid
	$(GOIMPORTS) -w ghetty.go
	# generate ghetty_go$(LIBEXT) from ghetty.go -- the cgo wrappers to go functions
	$(GOBUILD) -buildmode=c-shared -o ghetty_go$(LIBEXT) ghetty.go
	# use pybindgen to build the ghetty.c file which are the CPython wrappers to cgo wrappers..
	# note: pip install pybindgen to get pybindgen if this fails
	$(PYTHON) build.py
	# build the _ghetty$(LIBEXT) library that contains the cgo and CPython wrappers
	# generated ghetty.py python wrapper imports this c-code package
	# windows-only sed hack here to fix pybindgen declaration of PyInit
  sed -i "s/ PyInit_/ __declspec(dllexport) PyInit_/g" ghetty.c
	$(GCC) ghetty.c  ghetty_go$(LIBEXT) -o _ghetty$(LIBEXT) $(CFLAGS) $(LDFLAGS) -fPIC --shared -w
	


